<h1><%= @user.name %></h1>
<p><%= @user.email %></p>
<hr>
<ul>
<% @products.each do |product| %>
    <li><%= link_to(product.title, user_product_path(@user.id,product.id)) %></li>
<% end %>
</ul>
<%= link_to("Add product", new_user_product_path(@user.id),class: "my-links") %> 
<% if flash[:notice] %> 
  <%= flash[:notice] %> 
<% elsif flash[:alert] %> 
  <%= flash[:alert] %> 
<% end %>