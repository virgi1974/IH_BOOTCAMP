<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="UTF-8">
	<title>Document</title>
</head>
<body>
	<ul>
		<% @projects.each do |project| %>
		<!-- or project.description.present? -->
			<% if !project.description %>  <!-- or project.description != nil -->
				<li><%= project.name%></li>
			<% else %>
				<li style="background-color: gray; width: 20%; text-align: center;border: solid; margin: 5px">
				<%= project.name %>&nbsp;&nbsp;<%= project.description %>&nbsp;&nbsp;
				<!-- <a href="/projects/<%= project.id %>" style="color: white">Show</a> -->
				<%= link_to("project description",project_path(project.id)) %>
				<br>
				<%= link_to("entries",project_entries_path(project.id)) %>
				</li>
			<% end %>	
		<% end %>
	</ul>
</body>
</html>

