<div id="container-fluid">
	<div class="row">
		<section class="col-md-6">
		<h3>TODAY`S CONCERT</h3>
				<% if @today_concert.count != 0 %>
					<% @today_concert.each do |concert| %>
						<article>
							<p> <%=concert.band %> </p>
							<p> <%=concert.venue %> </p>
							<p> <%=concert.city %> </p>
							<p> <%=concert.date %> </p>
							<p> <%=concert.price %> </p>
							<p> <%=concert.description %> </p>
						</article>
					<% end %>
				<% end %>
		</section>	
		<aside class="col-md-6">
		<h3 id="h-der">LATER THIS MONTH</h3>
			<% if @month_concerts.count != 0 %>
				<% @month_concerts.each do |concert| %>
				<article>
					<p> 
						<%= concert.band %>&nbsp;&nbsp;<%= link_to("Info",concert_path(concert.id)) %>
					</p>
				</article>
				<% end %>
			<% end %>
		</aside>
	</div>
</div>

<%= link_to("CREATE NEW CONCERT",new_concert_path(@concert)) %>
