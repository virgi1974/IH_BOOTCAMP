<p> <%= flash_message %> </p>	 
<% if @new_comment.errors.any? %>
	<ul>
		<% @new_comment.errors.full_messages.each do |error| %>
			<li style="background-color: red; margin: 5px;"> <%= error %> </li>
		<% end %>
	</ul>
<% end %>


<h1>Add a comment</h1>
<div id="form-new">
	<%= form_for [@concert,@new_comment] do |f| %>
		<div>
			<%= f.label :comment %>
			<%= f.text_field :comment %>
		</div>
			<%= f.submit 'SAVE CHANGES',class: 'sub' %>
		<hr>
		<%= link_to("CANCEL",concert_path(:id)) %>
	<% end %>

</div>

